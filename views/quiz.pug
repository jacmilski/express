extends layout

block content
  h1= title
  if show
    form(method='post')
      p Jaka jest Twoja ulubiona pora roku ?
        ul 
          each item in data 
            li(style='list-style: none') 
              input(type='radio' name='quiz' value=item._id style='margin-right: 10px')
              label=item.title
        input(type='submit' value='Zagłosuj')
        p Aby zobaczyć wyniki oddaj głos
  else 
    h2 Dokonałeś już głosu w ankiecie
    p Wyniki 
    ul 
    each item in data 
      li #{item.title} - głosów: #{item.vote}, (#{((item.vote/sum)*100).toFixed(2)}%)

  h3 Głosów oddanych #{sum}

